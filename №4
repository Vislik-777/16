using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp53
{
    class Program
    {
        static void Main()
        {
            var v1 = new Vector(1, 2, 3);
            var v2 = new Vector(4, 5, 6);
            Console.WriteLine(v1 * v2); // 32
            v1[1] = 10;
            Console.WriteLine(v1); // [1, 10, 3]
        }
    }
}

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp53
{
    using System;
    using System.Linq;

    public class Vector
    {
        private double[] _components;

        public Vector(params double[] components)
        {
            _components = (double[])components.Clone();
        }

        // Индексатор
        public double this[int index]
        {
            get => _components[index];
            set => _components[index] = value;
        }

        // Перегрузка оператора умножения (скалярное произведение)
        public static double operator *(Vector v1, Vector v2)
        {
            if (v1._components.Length != v2._components.Length)
                throw new ArgumentException("Векторы должны быть одинаковой длины.");

            double sum = 0;
            for (int i = 0; i < v1._components.Length; i++)
                sum += v1._components[i] * v2._components[i];
            return sum;
        }

        // Переопределение ToString()
        public override string ToString()
        {
            return "[" + string.Join(", ", _components) + "]";
        }
    }
}
